{% extends "layouts/admin.twig" %}

{% block title %}
	<title>Hello Immo - Modifier un bien</title>
{% endblock %}


{% block main %}
	<form class="add-estate-form" action="/admin/biens/ajouter" method="POST" enctype="multipart/form-data">
		<div class="input-group">
			<div class="input--container">
				<input type="text" value="{{estate.title}}" placeholder="Titre de l'annonce" name="title">
				{% if errors.title %}
					<p class="error">{{errors.title}}</p>
				{% endif %}
			</div>
		</div>

		<div class="input-group">
			<div class="input--container">
				<textarea name="description" placeholder="Décrivez le bien à mettre en vente/location">{{estate.description}}</textarea>

				{% if errors.description %}
					<p class="error">{{errors.description}}</p>
				{% endif %}
			</div>
		</div>

		<div class="input-group">
			<div class="input--container">
				<select name="type">
					<option {{estate.type == "maison" ? 'selected' : ''}} value="maison">Maison</option>
					<option {{estate.type == "appartement" ? 'selected' : ''}} value="appartement">Appartement</option>
					<option {{estate.type == "studio" ? 'selected' : ''}} value="studio">Studio</option>
				</select>
				{% if errors.type %}
					<p class="error">{{errors.type}}</p>
				{% endif %}
			</div>
			<div class="input--container">
				<select name="acquisition_type">
					<option {{estate.acquisition_type == "achat" ? 'selected' : ''}} value="achat">Achat</option>
					<option {{estate.acquisition_type == "location" ? 'selected' : ''}} value="location">Location</option>
				</select>
				{% if errors.acquisition_type %}
					<p class="error">{{errors.acquisition_type}}</p>
				{% endif %}
			</div>
		</div>

		<div class="input-group">
			<div class="input--container"><input min="1" type="number" placeholder="Pièces" value="{{estate.rooms}}" name="rooms">
				{% if errors.rooms %}
					<p class="error">{{errors.rooms}}</p>
				{% endif %}
			</div>
			<div class="input--container"><input min="0" type="number" placeholder="Chambres" value="{{estate.bedrooms}}" name="bedrooms">
				{% if errors.bedrooms %}
					<p class="error">{{errors.bedrooms}}</p>
				{% endif %}
			</div>
			<div class="input--container"><input min="1" type="number" placeholder="Salles de bain" value="{{estate.bathrooms}}" name="bathrooms">
				{% if errors.bathrooms %}
					<p class="error">{{errors.bathrooms}}</p>
				{% endif %}
			</div>
		</div>

		<div class="input-group">
			<div class="input--container"><input min="1" type="number" placeholder="Superficie (en m²)" value="{{estate.area}}" name="area">
				{% if errors.area %}
					<p class="error">{{errors.area}}</p>
				{% endif %}
			</div>
			<div class="input--container"><input min="0" type="number" placeholder="Etage" value="{{estate.floor}}" name="floor">
				{% if errors.floor %}
					<p class="error">{{errors.floor}}</p>
				{% endif %}
			</div>
			<div class="input--container"><input min="0" type="number" placeholder="Etage max" value="{{estate.max_floor}}" name="max_floor">
				{% if errors.max_floor %}
					<p class="error">{{errors.max_floor}}</p>
				{% endif %}
			</div>
		</div>

		<div class="input-group">
			<div class="input--container">
				<input type="text" placeholder="Ville ou se situe le bien" value="{{estate.city}}" name="city">
				{% if errors.city %}
					<p class="error">{{errors.city}}</p>
				{% endif %}
			</div>
			<div class="input--container">
				<input min="1" type="number" placeholder="Année de construction" value="{{estate.build_year}}" name="build_year">
				{% if errors.build_year %}
					<p class="error">{{errors.build_year}}</p>
				{% endif %}
			</div>
			<div class="input--container">
				<input min="1" type="number" placeholder="Prix du bien (en €)" value="{{estate.price}}" name="price">
				{% if errors.price %}
					<p class="error">{{errors.price}}</p>
				{% endif %}
			</div>
		</div>
		<button type="submit" class="btn">Modifier</button>
	</form>
{% endblock %}
